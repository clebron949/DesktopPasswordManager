{
    "appId": "com.gotyoursoftware.passwordmanager",
    "productName": "Password Manager",
    "copyright": "Copyright Â© 2025 Got Your Software, LLC",
    "directories": {
        "output": "release"
    },
    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "shortcutName": "Password Manager"
    },
    "win": {
        "target": "nsis",
        "icon": "src/main/static/favicon.ico",
        "publisherName": "Got Your Software, LLC"
    },
    "linux": {
        "target": [
            "snap"
        ]
    },
    "mac": {
        "target": "dmg",
        "icon": "src/main/static/favicon.icns"
    },
    "files": [
        {
            "from": "build/main",
            "to": "main",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "build/renderer",
            "to": "renderer",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "src/main/static",
            "to": "static",
            "filter": [
                "**/*"
            ]
        },
        "!build",
        "!dist",
        "!scripts",
        "!release",
        "!docs",
        "!src",
        "!.git"
    ]
}